{
  "$schema": "https://json-schema.org/draft-07/schema",
  "name": "default",
  "version": "0.8.15",
  "author": "laas",
  "license": "UNLICENSED",
  "description": "some kind of desktop/workbench",
  "browserslist": "cover 99% and last 2 versions and last 1 years",
  "engines": { "node": "current node" },
  "scripts": {
    "watch": "tsc --watch",
    "serve": "vite serve",
    "build": "npm ci && vite optimize && vite build --emptyOutDir",
    "preview": "npm ci && vite optimize && vite preview --debug"
  },
  "devDependencies": {
    "@types/three": "^0.152.1",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "^8.43.0",
    "three": "^0.153.0",
    "typescript": "^5.1.3",
    "vite": "^4.3.9"
  },
  "eslintConfig": {
    "root": true,
    "env": { "node": true, "browser": true },
    "ignorePatterns": [ "pub", "dist" ],
    "plugins": [ "@typescript-eslint" ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/strict",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": "tsconfig.json"
    },
    "rules": {
      "semi":
      [ 1, "never" ],
      "quotes":
      [ 1, "double" ],
      "comma-dangle":
      [ 1, "always-multiline" ],
      "comma-spacing":
      [ 1 ],
      "block-spacing":
      [ 1 ],
      "keyword-spacing":
      [ 1 ],
      "space-infix-ops":
      [ 1 ],
      "space-in-parens":
      [ 1 ],
      "no-multi-spaces":
      [ 1 ],
      "no-trailing-spaces":
      [ 1 ],
      "object-curly-spacing":
      [ 1 ],
      "no-mixed-spaces-and-tabs":
      [ 1 ],
      "no-whitespace-before-property":
      [ 1 ],
      "indent":
      [ 1, 4, {
          "VariableDeclarator": "first",
          "FunctionExpression": { "parameters": "first" }
        }
      ],
      "key-spacing":
      [ 1, {
          "align": {
            "beforeColon": true,
            "afterColon": true,
            "on": "colon"
          }
        }
      ],
      "@typescript-eslint/type-annotation-spacing":
      [ 1, {
          "before": false,
          "after": false
        }
      ]
    }
  }
}